<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectMediiMobile1.Pages.Stilist.StilistDetailPage"
             Title="StilistDetailPage">
    <StackLayout Margin="20">
        <Label Text="Nume: " FontAttributes="Bold" />
        <Label Text="{Binding Nume}" />

        <Label Text="Pret: " FontAttributes="Bold" />
        <Label Text="{Binding Pret, StringFormat='{0:F2}'}" />
        <!-- Formatting the price -->

        <Label Text="Salon ID: " FontAttributes="Bold" />
        <Label Text="{Binding SalonID}" />

        

        <Button Text="Edit" Clicked="OnEditButtonClicked" />
        <Button Text="Delete" Clicked="OnDeleteButtonClicked" />
    </StackLayout>
</ContentPage>
