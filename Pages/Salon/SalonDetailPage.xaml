<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectMediiMobile1.Pages.Salon.SalonDetailPage"
             Title="SalonDetailPage">
    <StackLayout Margin="20">
        <Label Text="Nume: " FontAttributes="Bold" />
        <Label Text="{Binding Nume}" />

        <Label Text="Oras: " FontAttributes="Bold" />
        <Label Text="{Binding Oras}" />

        <Label Text="Pret: " FontAttributes="Bold" />
        <Label Text="{Binding Pret}" />

        <Label Text="Categori: " FontAttributes="Bold" />
        <Label Text="{Binding Categorie}" />

        <Button Text="Edit" Clicked="OnEditButtonClicked" />
        <Button Text="Delete" Clicked="OnDeleteButtonClicked" />
        </StackLayout>
</ContentPage>