<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectMediiMobile1.Pages.Programare.ProgramareEntryPage"
             Title="ProgramareEntryPage">
    <VerticalStackLayout Spacing="20" Padding="15">

        

        <!-- Picker for Salon -->
        <Picker x:Name="salonPicker" Title="Select a Salon">
        </Picker>

        <!-- Picker for Stilist -->
        <Picker x:Name="stilistPicker" Title="Select a Stilist">
        </Picker>
        
        
        <DatePicker x:Name="dataDatePicker" />

        <Button Text="Save" Clicked="OnSaveButtonClicked" />
    </VerticalStackLayout>
</ContentPage>
