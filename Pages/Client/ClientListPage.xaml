<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectMediiMobile1.Pages.Client.ClientListPage"
             Title="ClientListPage">
    <StackLayout>
        <ListView x:Name="clientListView"
              ItemSelected="OnClientSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Nume}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Adauga Client" Clicked="OnAddClientClicked" />
    </StackLayout>
</ContentPage>